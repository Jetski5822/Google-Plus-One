@using NGM.GooglePlusone.Extensions
@using NGM.GooglePlusone.Models

@{
    var culture = Model.Culture;
    var contentPart = (GooglePlusonePart)Model.ContentPart;
}

@Html.BuildPlusoneHtmlFor(contentPart)


<script type="text/javascript" src="https://apis.google.com/js/plusone.js">
    {lang: @culture.Name, parsetags: @contentPart.Parse}
</script>
    
@if (contentPart.Parse == NGM.GooglePlusone.Models.Parse.Explicit.ToString())
{
    <script type="text/javascript">gapi.plusone.go();</script>
}
